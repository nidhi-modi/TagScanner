<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tandg_background_image"
    tools:context=".WriteNfc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_starting_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_2sdp">

            <EditText
                android:id="@+id/edt_starting_text"
                style="@style/Form.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:hint="Enter Starting Text"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:textColorHint="@color/grey_800" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_starting_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_2sdp">

            <EditText
                android:id="@+id/edt_starting_number"
                style="@style/Form.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:hint="Enter Starting Row Number"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:textColorHint="@color/grey_800" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_interval_increase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_2sdp">

            <EditText
                android:id="@+id/edt_interval_increase"
                style="@style/Form.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:hint="Enter Interval Increase"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:textColorHint="@color/grey_800" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnStartScanning"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/my_button"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="Start Scanning"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"/>


    </LinearLayout>

</LinearLayout>